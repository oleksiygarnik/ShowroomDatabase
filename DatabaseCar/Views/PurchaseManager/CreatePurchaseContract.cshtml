
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

@model DatabaseCar.Data_Access_Layer.Entities.PurchaseContract
@using DatabaseCar.Data_Access_Layer.Entities.Enums;
@{
    ViewBag.Title = "Create";
}

<section>
    <div class="container">
        <div class="row">

            <br />

            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <li><a href="/admin/index">Админпанель</a></li>
                    <li><a href="/purchase/index">Управление контрактами</a></li>
                    <li class="active">Add purchase contract</li>
                </ol>
            </div>

            <h4>Add new purchase contract</h4>

            <br />

            @using (Html.BeginForm())
            {
                @Html.LabelFor(model => model.SupplierName, "Supplier name")
                <br />
                @Html.EditorFor(model => model.SupplierName)
                <br /><br />
                @Html.LabelFor(model => model.Date, "Date")
                <br />
                @Html.EditorFor(model => model.Date)
                <br /><br />
                @Html.DisplayNameFor(model => model.Status)
                <br />
                @Html.DropDownListFor(model => model.Status, new SelectList(new List<Status> { Status.Waiting }, "Name"))
                <br /><br />
                <br />
                <input type="submit" class="btn btn-default" value="Add" />
            }


        </div>
    </div>
</section>