@model DatabaseCar.Data_Access_Layer.Entities.PurchaseContract
@using DatabaseCar.Data_Access_Layer.Entities.Enums;
@{
    ViewBag.Title = "Edit";
}

<section>
    <div class="container">
        <div class="row">

            <br />

            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <li><a href="/purchasemanager/index">Админпанель</a></li>
                    <li><a href="/purchasenamanager/index">Управление контрактами</a></li>
                    <li class="active">Edit payroll </li>
                </ol>
            </div>


            <h4>Редактировать товар @Model.Id ?></h4>

            <br />
            <h2>Payroll № @Model.Id</h2>
            <div class="col-lg-4">
                <div class="login-form">
                    <form action="/purchasemanager/editPurchaseContract" method="post" enctype="multipart/form-data">
                        @Html.HiddenFor(m => m.Id)
                        <p>
                            @Html.LabelFor(m => m.SupplierName, "SupplierName")
                            <br />
                            @Html.EditorFor(m => m.SupplierName)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.Date, "Date")
                            <br />
                            @Html.EditorFor(m => m.Date)

                        </p>

                        <p>
                            @Html.DisplayNameFor(model => model.Status)
                            <br />
                            @Html.DropDownListFor(model => model.Status, new SelectList(new List<Status> { Status.Waiting }, "Name"))
                        </p>

                        <p><input type="submit" value="Отправить" /></p>


                        <br /><br />

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>