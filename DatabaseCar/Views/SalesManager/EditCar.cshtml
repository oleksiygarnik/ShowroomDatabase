@model DatabaseCar.Data_Access_Layer.Entities.Car
@{
    ViewBag.Title = "Edit";
}

<section>
    <div class="container">
        <div class="row">

            <br />

            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <li><a href="/admin/index">Админпанель</a></li>
                    <li><a href="/accountant/index">Управление товарами</a></li>
                    <li class="active">Edit car </li>
                </ol>
            </div>


            <h4>Are you want edit car @Model.Id ?</h4>

            <br />
            <h2>Car № @Model.Id</h2>
            <div class="col-lg-4">
                <div class="login-form">
                    <form action="/salesmanager/editCar" method="post" enctype="multipart/form-data">
                        @Html.HiddenFor(m => m.Id)
                        <p>
                            @Html.LabelFor(m => m.BrandId, "Brand")
                            <br />
                            @Html.EditorFor(m => m.BrandId)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.ColorId, "Color")
                            <br />
                            @Html.EditorFor(m => m.ColorId)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.ModelId, "Model")
                            <br />
                            @Html.EditorFor(m => m.ModelId)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.Price, "Price")
                            <br />
                            @Html.EditorFor(m => m.Price)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.SaleDate, "Sale Date")
                            <br />
                            @Html.EditorFor(m => m.SaleDate)

                        </p>


                        <p>
                            @Html.LabelFor(m => m.DeliveryDate, "Delivery Date")
                            <br />
                            @Html.EditorFor(m => m.DeliveryDate)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.Status, "Status")
                            <br />
                            @Html.EditorFor(m => m.Status)
                        </p>


                        <p><input type="submit" value="Отправить" /></p>


                        <br /><br />

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>