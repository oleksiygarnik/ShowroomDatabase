@model DatabaseCar.Data_Access_Layer.Entities.Client
@{
    ViewBag.Title = "Edit";
}

<section>
    <div class="container">
        <div class="row">

            <br />

            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <li><a href="/admin/index">Админпанель</a></li>
                    <li><a href="/accountant/index">Управление товарами</a></li>
                    <li class="active">Edit client info </li>
                </ol>
            </div>


            <h4>Are you want edit client @Model.Id ?</h4>

            <br />
            <h2>Client № @Model.Id</h2>
            <div class="col-lg-4">
                <div class="login-form">
                    <form action="/salesmanager/editClient" method="post" enctype="multipart/form-data">
                        @Html.HiddenFor(m => m.Id)
                        <p>
                            @Html.LabelFor(m => m.Name, "Name")
                            <br />
                            @Html.EditorFor(m => m.Name)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.Surname, "Surname")
                            <br />
                            @Html.EditorFor(m => m.Surname)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.Patronymic, "Patronymic")
                            <br />
                            @Html.EditorFor(m => m.Patronymic)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.Age, "Age")
                            <br />
                            @Html.EditorFor(m => m.Age)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.BirthdayDate, "Birthday Date")
                            <br />
                            @Html.EditorFor(m => m.BirthdayDate)

                        </p>


                        <p>
                            @Html.LabelFor(m => m.ContactInfo, "Contact Info")
                            <br />
                            @Html.EditorFor(m => m.ContactInfo)
                        </p>


                        <p><input type="submit" value="Отправить" /></p>
                        c

                        <br /><br />

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>