@model DatabaseCar.Data_Access_Layer.Entities.Payroll
@{
    ViewBag.Title = "Edit";
}

<section>
    <div class="container">
        <div class="row">

            <br />

            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <li><a href="/admin/index">Админпанель</a></li>
                    <li><a href="/accountant/index">Управление товарами</a></li>
                    <li class="active">Edit payroll </li>
                </ol>
            </div>


            <h4>Редактировать товар @Model.Id ?></h4>

            <br />
            <h2>Payroll № @Model.Id</h2>
            <div class="col-lg-4">
                <div class="login-form">
                    <form action="/accountant/editPayroll" method="post" enctype="multipart/form-data">
                        @Html.HiddenFor(m => m.Id)
                        <p>
                            @Html.LabelFor(m => m.EmployeeId, "Employee")
                            <br />
                            @Html.EditorFor(m => m.EmployeeId)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.Date, "Date")
                            <br />
                            @Html.EditorFor(m => m.Date)

                        </p>

                        <p>
                            @Html.LabelFor(m => m.PeriodDate, "Date of Period")
                            <br />
                            @Html.EditorFor(m => m.PeriodDate)
                        </p>

                        <p>
                            @Html.LabelFor(m => m.Salary, "Salary")
                            <br />
                            @Html.EditorFor(m => m.Salary)
                        </p>

                        <p><input type="submit" value="Отправить" /></p>


                        <br /><br />

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>